@model Product

<h2>Sell Confirmation</h2>

<p>Product Name: @ViewData["SelledProductName"]</p>
<p>Product Price: @ViewData["SelledProductPrice"]</p>
<p>Quantity: @ViewData["SelledQuantity"]</p>
<p>Total Amount: @ViewData["SelledAmount"]</p>

<form method="post" >
    <div class="form-group">
        <label for="CustomerName">Customer Name:</label>
        <input type="text" class="form-control" id="CustomerName" name="CustomerName" required>
        <span class="text-danger" ></span>
    </div>
    <div class="form-group">
        <label for="CustomerContact">Customer Contact:</label>
        <input type="text" class="form-control" id="CustomerContact" name="CustomerContact" required>
    </div>
    <div class="form-group">
        <label for="GstNo">GST Number:</label>
        <input type="text" class="form-control" id="GstNo" name="GstNo" required>
    </div>
    <input asp-for="ProductId" value="@Model.ProductId" hidden />
    <input asp-for="Quantity" value="@ViewData["SelledQuantity"]" hidden />
    <input type="number" name="TotalAmount" value="@ViewData["SelledAmount"]" hidden />
    <button type="submit" class="btn btn-primary">Confirm Sell</button>
</form>
