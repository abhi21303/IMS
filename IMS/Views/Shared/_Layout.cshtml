<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IMS.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" integrity="sha384-4LISF5TTJX/fLmGSxO53rV4miRxdg84mZsxmO8Rx5jGtp/LbrixFETvWa5a6sESd" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        body {
            font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        }

        .side {
            background: #212121;
            height: 100vh;
            color: #ddd;
            position: sticky;
            top: 0;
            left: 0;
            /* width: 200px; /* Adjust width as needed */
            justify-content: center;
            padding: 20px;
            overflow-y: auto; /* Enable vertical scrolling if content overflows */
            overflow-x: hidden;
        }

        h3 {
            font-weight: 800;
            margin-bottom: 30px;
        }

        .nav-link {
            color: #ddd;
            font-size: 18px;
        }



            .nav-link:hover {
                color: #fff;
            }

        .style {
            display: flex;
            justify-content: left;
            align-items: center;
            gap: 0px;
        }

            .style:hover {
                scale: 1.05;
            }

        .name:focus {
            border-bottom: 1px solid white;
        }

        .fa-chalkboard-user:before {
            width: 15px;
            display: block;
        }
    </style>
</head>
<body>
    <div class="row m-0">
        <div class="col-2 side">
            <h3> <b>Inventory</b> </h3>
            <div class="property">
                <div class="row">
                    <div class="col-12 style">
                        <i class="fa fa-chalkboard-user"></i>

                        @{
                            if (Context.Session.GetString("user") == null)
                            {
                                <span class="nav-link disabled">Dashboard</span>
                            }
                            else
                            {
                                <a class="nav-link" asp-action="Index" asp-controller="Home">Dashboard</a>
                            }
                        }
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 style">
                        <i class="bi bi-box"></i>
                        @if (Context.Session.GetString("user") == null)
                        {
                            <span class="nav-link disabled">Products</span>
                        }
                        else
                        {
                            <a class="nav-link" asp-action="Index" asp-controller="Products">Products</a>
                        }
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 style">
                        <i class="ri-list-view"></i>
                        @if (Context.Session.GetString("user") == null)
                        {
                            <span class="nav-link disabled">Category</span>
                        }
                        else
                        {
                            <a class="nav-link" asp-action="Index" asp-controller="Category">Category</a>
                        }
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 style">
                        <i class="ri-store-3-line"></i>
                        @if (Context.Session.GetString("user") == null)
                        {
                            <span class="nav-link disabled">Inventory</span>
                        }
                        else
                        {
                            <a class="nav-link" asp-action="Index" asp-controller="Inventory">Inventory</a>
                        }
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 style">
                        <i class="ri-survey-line"></i>
                        @if (Context.Session.GetString("user") == null)
                        {
                            <span class="nav-link disabled">Order</span>
                        }
                        else
                        {
                            <a class="nav-link" asp-action="Index" asp-controller="Order">Order</a>
                        }
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 style">
                        <i class="ri-bar-chart-2-fill"></i>
                        @if (Context.Session.GetString("user") == null)
                        {
                            <span class="nav-link disabled">Sales</span>
                        }
                        else
                        {
                            <a class="nav-link" asp-action="Index" asp-controller="Sales">Sales</a>
                        }
                    </div>
                </div>
                @if (Context.Session.GetInt32("role") == 1)
                {  
                    <div class="row">
                        <div class="col-12 style">
                            <i class="bi bi-arrow-down-up"></i>                        
                            <a class="nav-link" asp-action="Index" asp-controller="InventoryTransaction">Inventory Transaction</a>
                        </div>
                    </div>
                }
                <div class="row" style="bottom:20px; position: absolute">
                    <div class="col-12 style">
                        <i class="bi bi-person-circle"></i>
                        @{
                            if (Context.Session.GetString("user") == null)
                            {
                                <a class="nav-link" asp-action="Index" asp-controller="Login">Login / Sign Up</a>
                            }
                            else
                            {
                                <a class="nav-link" asp-action="Logout" asp-controller="Login">@Context.Session.GetString("user")</a>
                            }
                        }
                    </div>
                </div>


                <!-- Add more navigation links as needed -->
            </div>
        </div>

        <div class="col-10 content">
            <!-- Adjust margin to accommodate sidebar width -->
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
